# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# General Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_PATH=/app/data/mental_wellness.db
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-service-account-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
MOBILE_APP_URL=exp://localhost:19000
ALLOWED_ORIGINS=http://localhost:3000,exp://localhost:19000

# HIPAA Compliance
HIPAA_ENCRYPTION_KEY=your-256-bit-encryption-key-for-sensitive-data
DATA_RETENTION_DAYS=365
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-chars

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3001

# AWS Configuration (Optional - for cloud backups)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_BACKUP_BUCKET=your-backup-bucket

# Notification Configuration (Optional)
# SLACK_WEBHOOK_URL=your-slack-webhook-url
# BACKUP_WEBHOOK_URL=your-backup-notification-url

# External Services
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# Email Service (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Crisis Support Configuration
CRISIS_ALERT_WEBHOOK=your-webhook-url-for-crisis-alerts
EMERGENCY_CONTACT_API=your-emergency-services-api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Monitoring and Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
MIXPANEL_TOKEN=your-mixpanel-token

# Development Tools
DEBUG=mental-wellness:*
ENABLE_CORS=true
ENABLE_SWAGGER=true
